{
  "name": "root",
  "workspaces": [
    "components",
    "demos/*"
  ],
  "scripts": {
    "dev": "run-p \"wc -- dev\" \"static -- dev\" \"nextjs -- dev\"",
    "wc": "npm run -w components --",
    "static": "npm run -w static --",
    "nextjs": "npm run -w nextjs --",
    "clean": "shx rm -rf ./components/dist",
    "predev": "npm run clean"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "fast-glob": "^3.2.11"
  }
}
