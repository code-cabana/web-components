{
  "name": "root",
  "workspaces": [
    "components",
    "site"
  ],
  "scripts": {
    "dev": "run-p \"wc -- dev\" \"site -- dev\"",
    "wc": "npm run -w components --",
    "site": "npm run -w site --",
    "format": "prettier -w .",
    "clean": "shx rm -rf ./components/dist",
    "predev": "npm run clean"
  },
  "devDependencies": {
    "fast-glob": "^3.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "shx": "^0.3.4"
  }
}
